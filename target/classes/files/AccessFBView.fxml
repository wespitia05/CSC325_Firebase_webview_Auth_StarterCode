<AnchorPane prefHeight="571.0" prefWidth="894.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.csc325_firebase_webview_auth.view.AccessFBView">
   <children>
      <MenuBar fx:id="menuBar" layoutY="1.0" prefHeight="27.0" prefWidth="894.0">
        <menus>
          <Menu mnemonicParsing="false" text="File">
            <items>
                  <MenuItem fx:id="registerMenuItem" mnemonicParsing="false" onAction="#handleRegisterMenuItem" text="Register" />
              <MenuItem fx:id="closeMenuItem" mnemonicParsing="false" onAction="#handleCloseMenuItem" text="Close" />
            </items>
          </Menu>
          <Menu mnemonicParsing="false" text="Edit">
            <items>
              <MenuItem mnemonicParsing="false" text="Delete" />
            </items>
          </Menu>
          <Menu mnemonicParsing="false" text="Help">
            <items>
              <MenuItem mnemonicParsing="false" text="About" />
            </items>
          </Menu>
        </menus>
      </MenuBar>
      <HBox layoutX="6.0" layoutY="28.0" prefHeight="535.0" prefWidth="880.0">
         <children>
            <AnchorPane fx:id="leftAnchorPane" prefHeight="200.0" prefWidth="200.0">
               <children>
                  <ImageView fitHeight="150.0" fitWidth="129.0" layoutX="17.0" layoutY="14.0" pickOnBounds="true" preserveRatio="true">
                     <effect>
                        <InnerShadow>
                           <color>
                              <Color red="0.20652228593826294" green="0.1679999977350235" blue="0.6000000238418579" />
                           </color>
                        </InnerShadow>
                     </effect>
                     <image>
                        <Image url="@profile_empty.png" />
                     </image>
                  </ImageView>
               </children>
            </AnchorPane>
            <VBox prefHeight="535.0" prefWidth="551.0">
               <children>
                  <TextArea fx:id="outputField" prefHeight="184.0" prefWidth="514.0" />
                  <TableView fx:id="tableView" prefHeight="351.0" prefWidth="514.0">
                    <columns>
                      <TableColumn fx:id="nameColumn" prefWidth="75.0" text="Name" />
                      <TableColumn fx:id="majorColumn" prefWidth="75.0" text="Major" />
                        <TableColumn fx:id="ageColumn" prefWidth="75.0" text="Age" />
                    </columns>
                  </TableView>
               </children>
            </VBox>
            <VBox fx:id="rightVBox" prefHeight="535.0" prefWidth="241.0" spacing="10.0">
               <children>
                  <TextField fx:id="nameField" alignment="TOP_LEFT" prefHeight="25.0" prefWidth="272.0" promptText="Name" />
                  <TextField fx:id="majorField" promptText="Major" />
                  <TextField fx:id="ageField" promptText="Age" />
                  <HBox prefHeight="32.0" prefWidth="465.0">
                     <children>
                        <Button fx:id="readButton" mnemonicParsing="false" onAction="#readRecord" prefHeight="25.0" prefWidth="123.0" text="Read" textAlignment="CENTER">
                           <HBox.margin>
                              <Insets left="20.0" right="20.0" />
                           </HBox.margin>
                        </Button>
                        <Button fx:id="addButton" mnemonicParsing="false" onAction="#addRecord" prefHeight="25.0" prefWidth="128.0" text="Add" textAlignment="CENTER">
                           <HBox.margin>
                              <Insets left="20.0" right="20.0" />
                           </HBox.margin>
                        </Button>
                     </children>
                  </HBox>
                  <Button fx:id="switchroot" mnemonicParsing="false" onAction="#switchToSecondary" prefHeight="25.0" prefWidth="283.0" text="Switch" textAlignment="CENTER" />
               </children>
               <padding>
                  <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
               </padding>
            </VBox>
         </children>
      </HBox>
   </children>
   <opaqueInsets>
      <Insets />
   </opaqueInsets>
